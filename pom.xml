		<warp-snapshots-repo>https://nexus.d2dx.com/content/repositories/warp-snapshots</warp-snapshots-repo>
		<trap-releases-repo>https://nexus.d2dx.com/content/repositories/trap-releases</trap-releases-repo>
		<trap-snapshots-repo>https://nexus.d2dx.com/content/repositories/trap-snapshots</trap-snapshots-repo>
		<public-repo>https://nexus.d2dx.com/content/groups/public</public-repo>
		<plugins-repo>https://nexus.d2dx.com/content/groups/plugins</plugins-repo>
	</properties>
	<licenses>
		<license>
